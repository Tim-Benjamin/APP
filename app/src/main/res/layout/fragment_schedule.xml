<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_default">

            <!-- Header Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.CampusRide.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_default"
                app:cardBackgroundColor="@color/ucc_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_default">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/schedule_title"
                        android:textAppearance="@style/TextAppearance.CampusRide.Heading"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View shuttle routes and operating hours"
                        android:textAppearance="@style/TextAppearance.CampusRide.Body"
                        android:textColor="@color/white"
                        android:alpha="0.9"
                        android:layout_marginTop="@dimen/spacing_xs" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Day Selector Tabs -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="@dimen/card_elevation"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabSelectedTextColor="@color/ucc_blue"
                app:tabTextColor="@color/text_secondary"
                app:tabIndicatorColor="@color/ucc_blue"
                android:layout_marginBottom="@dimen/margin_default">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weekday_schedule" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weekend_schedule" />

            </com.google.android.material.tabs.TabLayout>

            <!-- Operating Hours Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.CampusRide.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_default">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_default">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/operating_hours"
                        android:textAppearance="@style/TextAppearance.CampusRide.Subheading"
                        android:layout_marginBottom="@dimen/spacing_m" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:src="@drawable/ic_schedule"
                            android:tint="@color/ucc_blue"
                            android:layout_marginEnd="@dimen/spacing_m"
                            android:contentDescription="Time" />

                        <TextView
                            android:id="@+id/tv_operating_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.CampusRide.Body"
                            tools:text="6:00 AM - 10:00 PM" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Routes Section Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/schedule_route"
                android:textAppearance="@style/TextAppearance.CampusRide.Heading"
                android:layout_marginBottom="@dimen/margin_medium" />

            <!-- Routes RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_routes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                tools:listitem="@layout/item_route_schedule" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>