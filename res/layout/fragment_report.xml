<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_default">

            <!-- Header Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.CampusRide.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_default"
                app:cardBackgroundColor="@color/ucc_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_default">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/report_title"
                        android:textAppearance="@style/TextAppearance.CampusRide.Heading"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help us improve the shuttle service"
                        android:textAppearance="@style/TextAppearance.CampusRide.Body"
                        android:textColor="@color/white"
                        android:alpha="0.9"
                        android:layout_marginTop="@dimen/spacing_xs" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Report Form Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.CampusRide.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_default">

                    <!-- Select Shuttle -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.CampusRide.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/report_select_shuttle"
                        app:startIconDrawable="@drawable/ic_bus"
                        app:endIconMode="dropdown_menu"
                        android:layout_marginBottom="@dimen/spacing_l">

                        <AutoCompleteTextView
                            android:id="@+id/actv_shuttle_selector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            tools:text="Shuttle A" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Issue Type -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.CampusRide.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/report_issue_type"
                        app:startIconDrawable="@drawable/ic_report"
                        app:endIconMode="dropdown_menu"
                        android:layout_marginBottom="@dimen/spacing_l">

                        <AutoCompleteTextView
                            android:id="@+id/actv_issue_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            tools:text="Delay" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Issue Type Chips (Alternative) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Common Issues"
                        android:textAppearance="@style/TextAppearance.CampusRide.Body"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_s" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_issues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="false"
                        android:layout_marginBottom="@dimen/spacing_l">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_delay"
                            style="@style/Widget.CampusRide.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/issue_delay"
                            app:chipIcon="@drawable/ic_schedule" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_breakdown"
                            style="@style/Widget.CampusRide.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/issue_breakdown"
                            app:chipIcon="@drawable/ic_report" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_overcrowding"
                            style="@style/Widget.CampusRide.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/issue_overcrowding"
                            app:chipIcon="@drawable/ic_person" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_missed_stop"
                            style="@style/Widget.CampusRide.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/issue_missed_stop"
                            app:chipIcon="@drawable/ic_map" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_other"
                            style="@style/Widget.CampusRide.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/issue_other" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Description -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.CampusRide.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/report_description"
                        app:startIconDrawable="@drawable/ic_edit"
                        app:counterEnabled="true"
                        app:counterMaxLength="500"
                        android:layout_marginBottom="@dimen/spacing_xl">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="120dp"
                            android:gravity="top|start"
                            android:inputType="textMultiLine|textCapSentences"
                            android:maxLength="500"
                            android:hint="@string/report_description_hint" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Submit Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_submit_report"
                        style="@style/Widget.CampusRide.Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/report_submit"
                        app:icon="@drawable/ic_send"
                        app:iconGravity="textStart" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Success Snackbar anchor -->
    <View
        android:id="@+id/snackbar_anchor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>