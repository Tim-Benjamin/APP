<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/ucc_blue</item>
        <item name="colorPrimaryVariant">@color/ucc_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/ucc_gold</item>
        <item name="colorSecondaryVariant">@color/ucc_gold_dark</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background_gray</item>
        <item name="backgroundColor">@color/background_gray</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/ucc_blue</item>
    </style>

    <!-- ========================================= -->
    <!-- TEXT STYLES -->
    <!-- ========================================= -->

    <!-- Heading Styles -->
    <style name="TextAppearance.CampusRide.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.CampusRide.Heading" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.CampusRide.Subheading" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_size_subheading</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- Body Text Styles -->
    <style name="TextAppearance.CampusRide.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.CampusRide.BodySecondary" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <!-- Caption Text Style -->
    <style name="TextAppearance.CampusRide.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <!-- Button Text Style -->
    <style name="TextAppearance.CampusRide.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- ========================================= -->
    <!-- BUTTON STYLES -->
    <!-- ========================================= -->

    <!-- Primary Button -->
    <style name="Widget.CampusRide.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.CampusRide.Button</item>
        <item name="backgroundTint">@color/ucc_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
        <item name="android:minHeight">@dimen/button_height_default</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="elevation">@dimen/card_elevation</item>
    </style>

    <!-- Secondary Button (Outlined) -->
    <style name="Widget.CampusRide.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.CampusRide.Button</item>
        <item name="android:textColor">@color/ucc_blue</item>
        <item name="strokeColor">@color/ucc_blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
        <item name="android:minHeight">@dimen/button_height_default</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
    </style>

    <!-- Text Button -->
    <style name="Widget.CampusRide.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.CampusRide.Button</item>
        <item name="android:textColor">@color/ucc_blue</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
    </style>

    <!-- Icon Button -->
    <style name="Widget.CampusRide.Button.Icon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="iconTint">@color/white</item>
        <item name="iconSize">@dimen/icon_size_medium</item>
    </style>

    <!-- ========================================= -->
    <!-- CARD STYLES -->
    <!-- ========================================= -->

    <!-- Base Card Style -->
    <style name="Widget.CampusRide.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">@dimen/card_padding</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>

    <!-- Shuttle Card Style -->
    <style name="Widget.CampusRide.Card.Shuttle" parent="Widget.CampusRide.Card">
        <item name="android:minHeight">@dimen/shuttle_card_min_height</item>
    </style>

    <!-- Elevated Card -->
    <style name="Widget.CampusRide.Card.Elevated" parent="Widget.CampusRide.Card">
        <item name="cardElevation">@dimen/card_elevation_raised</item>
    </style>

    <!-- ========================================= -->
    <!-- INPUT FIELD STYLES -->
    <!-- ========================================= -->

    <!-- Text Input Layout -->
    <style name="Widget.CampusRide.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/ucc_blue</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_radius</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Text Input EditText -->
    <style name="Widget.CampusRide.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:minHeight">@dimen/input_height</item>
        <item name="android:padding">@dimen/input_padding</item>
    </style>

    <!-- ========================================= -->
    <!-- TOOLBAR/APP BAR STYLES -->
    <!-- ========================================= -->

    <!-- Toolbar Style -->
    <style name="Widget.CampusRide.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/ucc_blue</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:elevation">@dimen/app_bar_elevation</item>
        <item name="android:minHeight">@dimen/app_bar_height</item>
    </style>

    <!-- Toolbar Title Style -->
    <style name="TextAppearance.CampusRide.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Toolbar Subtitle Style -->
    <style name="TextAppearance.CampusRide.Toolbar.Subtitle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- ========================================= -->
    <!-- BOTTOM NAVIGATION STYLES -->
    <!-- ========================================= -->

    <!-- Bottom Navigation View -->
    <style name="Widget.CampusRide.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.CampusRide.BottomNav.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.CampusRide.BottomNav.Inactive</item>
        <item name="elevation">@dimen/bottom_nav_elevation</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Bottom Nav Text - Active -->
    <style name="TextAppearance.CampusRide.BottomNav.Active" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/bottom_nav_label_size</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- Bottom Nav Text - Inactive -->
    <style name="TextAppearance.CampusRide.BottomNav.Inactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/bottom_nav_label_size</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <!-- ========================================= -->
    <!-- BADGE STYLES -->
    <!-- ========================================= -->

    <!-- Status Badge Base -->
    <style name="Widget.CampusRide.Badge">
        <item name="android:paddingStart">@dimen/shuttle_status_badge_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/shuttle_status_badge_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/shuttle_status_badge_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/shuttle_status_badge_padding_vertical</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Active Badge -->
    <style name="Widget.CampusRide.Badge.Active" parent="Widget.CampusRide.Badge">
        <item name="android:background">@drawable/badge_active_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Warning Badge -->
    <style name="Widget.CampusRide.Badge.Warning" parent="Widget.CampusRide.Badge">
        <item name="android:background">@drawable/badge_warning_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ========================================= -->
    <!-- FLOATING ACTION BUTTON -->
    <!-- ========================================= -->

    <style name="Widget.CampusRide.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/ucc_blue</item>
        <item name="tint">@color/white</item>
        <item name="elevation">@dimen/fab_elevation</item>
        <item name="pressedTranslationZ">@dimen/fab_elevation_pressed</item>
    </style>

    <!-- ========================================= -->
    <!-- DIVIDER STYLES -->
    <!-- ========================================= -->

    <style name="Widget.CampusRide.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!-- ========================================= -->
    <!-- DIALOG STYLES -->
    <!-- ========================================= -->

    <style name="Widget.CampusRide.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/ucc_blue</item>
        <item name="colorAccent">@color/ucc_gold</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.CampusRide.Button.Text</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.CampusRide.Button.Text</item>
    </style>

    <!-- ========================================= -->
    <!-- CHIP STYLES -->
    <!-- ========================================= -->

    <style name="Widget.CampusRide.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/background_light</item>
        <item name="chipStrokeColor">@color/divider</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipCornerRadius">@dimen/chip_radius</item>
    </style>

    <!-- ========================================= -->
    <!-- PROGRESS INDICATOR STYLES -->
    <!-- ========================================= -->

    <style name="Widget.CampusRide.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/ucc_blue</item>
        <item name="trackColor">@color/divider_light</item>
    </style>

</resources>